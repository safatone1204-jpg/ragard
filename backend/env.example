# Ragard Backend Environment Variables
# Copy this file to .env and fill in your values
#
# FOR PRODUCTION DEPLOYMENT:
# 1. Set ENVIRONMENT=production
# 2. Fill in all REQUIRED variables below
# 3. Update CORS_ORIGINS with your production domain(s)

# ============================================================================
# REQUIRED FOR PRODUCTION
# ============================================================================

# Environment (development or production)
# PRODUCTION: Set to "production"
ENVIRONMENT=development

# Supabase Configuration (REQUIRED)
# Get these from your Supabase project settings
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# CORS Origins (REQUIRED for production)
# PRODUCTION: Replace with your actual domain(s), comma-separated
# Example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Development: Leave as-is for localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# OPTIONAL (but recommended for full functionality)
# ============================================================================

# OpenAI API Key for AI features
# Required for AI-generated post analysis and user reports
OPENAI_API_KEY=

# Reddit API Credentials (optional - if not set, uses read-only mode)
# Required for authenticated Reddit API access (higher rate limits)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=Ragard/1.0 (Stock Analysis Bot)
REDDIT_USERNAME=
REDDIT_PASSWORD=

# API Configuration (for future external API integration)
API_BASE_URL=

# ============================================================================
# SERVER CONFIGURATION (usually don't need to change)
# ============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ============================================================================
# OPTIONAL - Error Tracking
# ============================================================================

# Error Tracking (Sentry) - Optional but recommended for production
# Get DSN from your Sentry project settings
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

